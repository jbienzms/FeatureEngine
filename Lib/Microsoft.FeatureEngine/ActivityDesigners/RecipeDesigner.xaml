<sap:ActivityDesigner x:Class="Microsoft.FeatureEngine.ActivityDesigners.RecipeDesigner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sap="clr-namespace:System.Activities.Presentation;assembly=System.Activities.Presentation"
    xmlns:sapv="clr-namespace:System.Activities.Presentation.View;assembly=System.Activities.Presentation"
    xmlns:sacdt="clr-namespace:System.Activities.Core.Presentation.Themes;assembly=System.Activities.Core.Presentation">
    
    <Grid>
        <ContentPresenter 
            x:Uid="ContentPresenter_1" 
            Content="{Binding}" 
            Style='{x:Static sacdt:DesignerStylesDictionary.SequenceStyle}'/>
    </Grid>
</sap:ActivityDesigner>
